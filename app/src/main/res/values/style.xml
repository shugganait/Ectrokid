<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="listStyleTv">
        <item name="android:background">@drawable/bg_tv_electr</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">2dp</item>
    </style>
    <style name="headerTv">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="simpleTv">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>